{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Up (build)",
      "type": "shell",
      "command": "docker-compose up -d --build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Backend: Health check",
      "type": "shell",
      "command": "powershell -NoProfile -Command \"try { Invoke-RestMethod http://localhost:3000/health | ConvertTo-Json -Depth 5 } catch { Write-Output \"HEALTH_CHECK_FAILED: $_\"; exit 1 }\"",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "command": "docker-compose down",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: List containers",
      "type": "shell",
      "command": "docker ps --format \"table {{.Names}}\t{{.Image}}\t{{.Status}}\t{{.Ports}}\"",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: MySQL logs (tail -f)",
      "type": "shell",
      "command": "docker logs ticketvue-mysql --tail 200 -f",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Backend logs (tail -f)",
      "type": "shell",
      "command": "docker logs ticketvue-backend --tail 200 -f",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Health inspect MySQL",
      "type": "shell",
      "command": "docker inspect --format='{{json .State.Health}}' ticketvue-mysql",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
